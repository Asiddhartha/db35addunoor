extends layout

block content
  h1= title
  p Welcome to #{title}
  p Most Disney characters wear gloves to keep animation simple
  br
  button(type="button",  onclick='update()', class="btn btn-success") Press Me 
  br
  br
  div(id='target') Display
  br
  br

  script.  
   var client_count=0;
     function update() {
       client_count++;
       document.getElementById("target").innerHTML=`Value now ${client_count}`;
  script.
     client_count = 0;
     function update()
     {
       document.getElementById("target").innerHTML = "Number of clicks is : " + ++client_count
     }

  if (!user)
   a(href="/login") Login
   br
   br
   a(href="/register") Register
  if (user)
   p You are currently logged in as #{user.username}
   a(href="/jack") Take me to jack
   br
   br
   a(href="/logout") Logout